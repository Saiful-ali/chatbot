{"compilerOptions": {
  "target": "ES2022",
  "module": "ESNext",
  "moduleResolution": "node",
  "strict": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "skipLibCheck": true,
  "baseUrl": ".",                 
  "paths": {
    "@shared/*": ["../shared/*"]
  }
}
,
  "include": [
    "*.ts",
    "routes/*.ts",
    "utils/*.ts",
    "services/*.ts",
    "../shared/*.ts"
  ]
}